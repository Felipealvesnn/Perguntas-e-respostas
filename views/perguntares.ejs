<%- include ('partials/header.ejs') %>

<body>
    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %> </h1>
        <p><%= pergunta.descricao %> </p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label for="">Resposta</label>
            <textarea class="form-control" name="corpo" id="" cols="30" rows="10"
                placeholder="digite sua resposta"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %> ">
            <button type="submit" class="btn btn-success">Responder</button>
        </form>
        <hr>
        <h3>respostas</h3>
        <hr>
        <% Resposta.forEach(Resposta => { %>
        <br>
        <div class="card">
            <div class="card-body">
                <p><%=  Resposta.corpo %> <br></p>
            </div>
        </div>


        <% }) %>
    </div>


</body>


<%- include ('partials/footer.ejs') %>